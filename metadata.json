{
    "project": {
        "name": "h-perforatum-network-tox",
        "title": "Network Position Dominates Target Count in Hepatotoxic Influence",
        "subtitle": "A Tiered Inference Framework Applied to Hypericum perforatum",
        "version": "2.0.0",
        "created": "2025-12-24",
        "last_updated": "2025-12-28",
        "license": "MIT",
        "repository": "https://github.com/antonybevan/h-perforatum-network-tox"
    },
    "methodology": {
        "framework": "Tiered Inference",
        "tiers": {
            "tier_1": {
                "name": "Shortest-Path Proximity (d_c)",
                "role": "Context only, not inference"
            },
            "tier_2": {
                "name": "Standard Random Walk Influence (RWI)",
                "role": "Epistemic baseline - does signal exist?"
            },
            "tier_3": {
                "name": "Expression-Weighted Influence (EWI)",
                "role": "Biological validation - does signal persist?"
            }
        },
        "derived_metric": {
            "name": "Per-Target Network Influence (PTNI)",
            "formula": "I / |T|",
            "purpose": "Measures targeting efficiency across both influence metrics"
        }
    },
    "environment": {
        "python_version": "3.10+",
        "os": "Windows/Linux/macOS",
        "random_seed": 42,
        "reproducibility": "Deterministic (sorted target lists, fixed seeds)"
    },
    "data_sources": {
        "string": {
            "name": "STRING Protein-Protein Interaction Database",
            "version": "12.0",
            "organism": "9606 (Homo sapiens)",
            "url": "https://string-db.org",
            "thresholds": [
                700,
                900
            ],
            "citation": "Szklarczyk D, et al. (2023). Nucleic Acids Res 51(D1):D483-D489"
        },
        "gtex": {
            "name": "Genotype-Tissue Expression Project",
            "version": "v8",
            "tissue": "Liver",
            "url": "https://gtexportal.org",
            "filter_criterion": "TPM >= 1",
            "citation": "GTEx Consortium (2020). Science 369(6509):1318-1330"
        },
        "dilirank": {
            "name": "DILIrank Drug-Induced Liver Injury Dataset",
            "url": "https://www.fda.gov/science-research/liver-toxicity-knowledge-base-ltkb",
            "compounds": 907,
            "citation": "Chen M, et al. (2016). Drug Discov Today 21(4):648-653"
        },
        "chembl": {
            "name": "ChEMBL Bioactivity Database",
            "version": "33",
            "url": "https://www.ebi.ac.uk/chembl/",
            "citation": "Zdrazil B, et al. (2024). Nucleic Acids Res 52(D1):D1180-D1192"
        }
    },
    "processed_data": {
        "networks": {
            "network_900_liver_lcc": {
                "file": "data/processed/network_900_liver_lcc.parquet",
                "description": "Liver LCC network (STRING >= 900)"
            },
            "network_700_liver_lcc": {
                "file": "data/processed/network_700_liver_lcc.parquet",
                "description": "Liver LCC network (STRING >= 700)"
            }
        },
        "targets": {
            "file": "data/processed/targets_lcc.csv",
            "hyperforin": 9,
            "quercetin": 62,
            "filtering": "Liver LCC only"
        }
    },
    "analysis_parameters": {
        "permutations": 1000,
        "restart_probability": 0.15,
        "convergence_threshold": 1e-6,
        "degree_matching_tolerance": 0.25,
        "fdr_method": "Benjamini-Hochberg",
        "fdr_alpha": 0.05
    },
    "results": {
        "tier_2_rwi": {
            "file": "results/tables/standard_rwr_lcc_permutation_results.csv",
            "hyperforin_z": 8.83,
            "quercetin_z": 4.42,
            "ptni_ratio": 21.9
        },
        "tier_3_ewi": {
            "file": "results/tables/expression_weighted_rwr_permutation_results.csv",
            "hyperforin_z": 7.99,
            "quercetin_z": 5.56,
            "ptni_ratio": 16.9
        },
        "core_finding": "Hyperforin exhibits 17-22x higher per-target network influence than Quercetin"
    },
    "pipeline_scripts": {
        "step_1_data": "scripts/create_lcc_filtered_data.py",
        "step_2_rwi": "scripts/run_standard_rwr_lcc_permutations.py",
        "step_3_ewi": "scripts/run_expression_weighted_rwr_permutations.py",
        "step_4_control": "scripts/run_chemical_similarity_control.py"
    },
    "citations": {
        "methods": [
            "Menche J, et al. (2015). Science 347(6224). DOI: 10.1126/science.1257601",
            "Guney E, et al. (2016). Nat Commun 7. DOI: 10.1038/ncomms10331",
            "Vanunu O, et al. (2010). PLOS Comput Biol 6. DOI: 10.1371/journal.pcbi.1000641"
        ]
    }
}